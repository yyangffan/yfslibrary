<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corner_white"
    >

    <ImageView
        android:id="@+id/dialog_remind_imgv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dialog_remind_title"
        android:layout_alignBottom="@+id/dialog_remind_title"
        android:layout_toLeftOf="@+id/dialog_remind_title"
        />

    <View
        android:id="@+id/phase_remidig_one"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/dialog_remind_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phase_remidig_one"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:paddingLeft="5dp"
        android:paddingTop="15dp"
        android:paddingRight="5dp"
        android:paddingBottom="3dp"
        android:text="您还未开放注册权限"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <View
        android:id="@+id/phase_remidig_two"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@+id/dialog_remind_title"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/dialog_remind_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phase_remidig_two"
        android:layout_centerHorizontal="true"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="3dp"
        android:text="- -"
        android:textColor="@color/black"
        android:textSize="14sp"
        />

    <View
        android:id="@+id/dialog_remind_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/dialog_remind_content"
        android:layout_marginTop="12dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_remind_line"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_remind_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            android:textColor="#666666"
            android:textSize="16sp"/>

        <View
            android:id="@+id/dialog_remind_btline"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#f5f5f5"/>

        <TextView
            android:id="@+id/dialog_remind_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="确认"
            android:textColor="@color/main_color"
            android:textSize="16sp"/>

    </LinearLayout>


</RelativeLayout>